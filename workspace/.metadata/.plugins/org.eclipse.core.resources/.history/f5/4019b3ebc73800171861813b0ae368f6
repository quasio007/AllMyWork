package basic.learning;


import java.awt.Color;
import java.awt.Dimension;
import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;

import javax.swing.BorderFactory;
import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class PanelDetails extends JPanel {
/**
	 * 
	 */
	private static final long serialVersionUID = 2237456478139611175L;

public PanelDetails(){
//	Setting size for panel
	Dimension size =getPreferredSize();
	size.width =250;
	setPreferredSize(size);
	
//	Adding Border to panel:
	setBackground(Color.LIGHT_GRAY);
	setBorder(BorderFactory.createTitledBorder("PersonalDetails"));
	
//	Adding Components:
	JLabel name =new JLabel("Name: ");
	JLabel age =new JLabel("Age: ");
	JTextField nameText =new JTextField();
	JTextField ageText =new JTextField();
	JButton button =new JButton("Add Details");
	
//	Setting Layout
	setLayout(new GridBagLayout());
	GridBagConstraints g =new GridBagConstraints();
	
//	First Column:
	g.weightx =0.5;
	g.weighty =0.5;
	
	g.anchor =GridBagConstraints.FIRST_LINE_END;
	g.gridx =0;
	g.gridy =0;
	add(name, g);
	g.gridy =1;
	add(age, g);
	
//	Second Column:
	g.anchor =GridBagConstraints.FIRST_LINE_START;
	g.gridx=1;
	g.gridy =0;
	add(nameText,g);
	g.gridy =1;
	add(ageText, g);
	
//	Final Row:
	g.weighty =12;
	g.gridx =1;
	g.gridy =2;
	add(button,g);
	
	
	
			
	
	
}
}
